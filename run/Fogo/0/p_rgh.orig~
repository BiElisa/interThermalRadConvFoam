FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0]; // kg m s K mol A cd

press   -55.38 ; 
//press    -217.29 ; // se la densità è uniforme 886

internalField   uniform  $press; // initially atmospheric pressure in the entire domain

boundaryField
{
//JN: This boundary condition sets the pressure gradient to the provided value
//    such that the flux on the boundary is that specified by the velocity
//    boundary condition. gradient() = 0.0;

    terrain //lowerWall
    {
        type            fixedFluxPressure;
        value           uniform $press;
    }

    roundedWall
    {
		type            fixedFluxPressure;
        value           uniform $press;
	}
	
    atmosphere
    {
        type            totalPressure;
        p0              uniform $press;
    }

    defaultFaces
    {
        type            empty;
    }
}

// ************************************************************************* //
